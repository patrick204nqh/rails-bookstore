<% @users.each do |user| %>
<div class="flex justify-between items-center m-5 p-3 border border-gray-200 rounded shadow">
	<div class="w-2/3 text-gray-700">
		<div class="text-sm"><%= user.email %></div>
		<div class="text-sm"><%= user.created_at %></div>
	</div>
    <div class="w-1/3 text-right" >
      <% if user.admin? %>
        Admin
      <% else %>
        Normal
      <% end %>
    </div>
</div>
<% end %>