<%= form_for @user, url: user_path,
  class: "container mx-auto bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4 flex flex-col my-2",
  method: :put do |f|
%>
  <div class="-mx-3 md:flex mb-6">
    <div class="md:w-full px-3">
      <label class="block uppercase tracking-wide text-grey-darker text-xs font-bold mb-2">
        Email
      </label>
      <p class="appearance-none block w-full bg-grey-lighter text-grey-darker border border-grey-lighter rounded py-3 px-4 mb-3">
        <%= @user.email %>
      </p>
      <p class="text-grey-dark text-xs italic">Not allowed change</p>
    </div>
  </div>
  <div class="-mx-3 md:flex mb-6">
    <div class="md:w-full px-3">
      <label class="block uppercase tracking-wide text-grey-darker text-xs font-bold mb-2">
        Created At
      </label>
      <p class="appearance-none block w-full bg-grey-lighter text-grey-darker border border-grey-lighter rounded py-3 px-4 mb-3">
        <%= @user.created_at %>
      </p>
      <p class="text-grey-dark text-xs italic">Not allowed change</p>
    </div>
  </div>

  <div class="-mx-3 md:flex mb-2">
    <div class="md:w-full px-3">
      <label class="block uppercase tracking-wide text-grey-darker text-xs font-bold mb-2" for="grid-state">
        Role
      </label>
      <p class="appearance-none block w-full bg-grey-lighter text-grey-darker border border-grey-lighter rounded py-3 px-4 mb-3">
        <%= f.select :admin, options_for_select(options_for_select_helper, @user.admin.present? ) %>
      </p>
    </div>
  </div>
  <div class="md:flex mb-2">
    <%= f.submit 'Change Role', class: "rounded bg-green-400 text-gray-100 font-bold p-2 text-center" %>
  </div>
<% end %>